{
  "extends": "../tsconfig/base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
